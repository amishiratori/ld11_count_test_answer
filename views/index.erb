<!DOCTYPE html>
<html lang="ja">
<head>
	<meta charset="UTF-8">
	<title>リーダーズ11th確認テスト</title>
	<link rel="stylesheet" href="./assets/css/count.css">
</head>
<body>
	<form action="/new" method="post">
		<input type="text" name="title">
		<input type="submit" value="create!">
	</form>
	<% @counts.each do |count| %>
		<h2><%= count.title %></h2>
		<h1><%= count.number %></h1>
		<form action="/plus/<%= count.id %>" method="post">
			<input type="submit" value="+">
		</form>
		<form action="/minus/<%= count.id %>" method="post">
			<input type="submit" value="-">
		</form>
		<form action="/multiple/<%= count.id %>" method="post">
			<input type="submit" value="*2">
		</form>
		<form action="/divide/<%= count.id %>" method="post">
			<input type="submit" value="/2">
		</form>
		<form action="/clear/<%= count.id %>" method="post">
			<input type="submit" value="clear">
		</form>
	<% end %>
</body>
</html>
